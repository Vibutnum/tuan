- content_for :head do
  css:
    .group-link {
      display: block;
      background: url("#{ image_path('uxuan_bg.png') }") no-repeat -68px -226px;
      background-size: 320px 400px;
      width: 44px;
      height: 44px;
      position: fixed;
      left: 10px;
      -webkit-transform-style: preserve-3d;
      -moz-transform-style: preserve-3d;
      -ms-transform-style: preserve-3d;
      -o-transform-style: preserve-3d;
      transform-style: preserve-3d;
      -webkit-transform-origin: center bottom;
      -moz-transform-origin: center bottom;
      -ms-transform-origin: center bottom;
      -o-transform-origin: center bottom;
      transform-origin: center bottom;
    }
    .group-link-init {
      top: -50px;
    }
    @-webkit-keyframes 'bounce' {
      0% {
        -webkit-transform: scaleY(1) scaleX(1);
      }
      40% {
        -webkit-transform: scaleY(0.8) scaleX(1.2);
      }
      75% {
        -webkit-transform: scaleY(1.2) scaleX(0.8);
      }
      100% {
        -webkit-transform: scaleY(1) scaleX(1);
      }
    }
    @-moz-keyframes 'bounce' {
      0% {
        -moz-transform: scaleY(1) scaleX(1);
      }
      40% {
        -moz-transform: scaleY(0.8) scaleX(1.2);
      }
      75% {
        -moz-transform: scaleY(1.2) scaleX(0.8);
      }
      100% {
        -moz-transform: scaleY(1) scaleX(1);
      }
    }
    @-ms-keyframes 'bounce' {
      0% {
        -ms-transform: scaleY(1) scaleX(1);
      }
      40% {
        -ms-transform: scaleY(0.8) scaleX(1.2);
      }
      75% {
        -ms-transform: scaleY(1.2) scaleX(0.8);
      }
      100% {
        -ms-transform: scaleY(1) scaleX(1);
      }
    }
    @-o-keyframes 'bounce' {
      0% {
        -o-transform: scaleY(1) scaleX(1);
      }
      40% {
        -o-transform: scaleY(0.8) scaleX(1.2);
      }
      75% {
        -o-transform: scaleY(1.2) scaleX(0.8);
      }
      100% {
        -o-transform: scaleY(1) scaleX(1);
      }
    }
    @keyframes 'bounce' {
      0% {
        transform: scaleY(1) scaleX(1);
      }
      40% {
        transform: scaleY(0.8) scaleX(1.2);
      }
      75% {
        transform: scaleY(1.2) scaleX(0.8);
      }
      100% {
        transform: scaleY(1) scaleX(1);
      }
    }
    .group-link-show {
      -webkit-transition: top 0.3s ease-in 0.5s;
      -moz-transition: top 0.3s ease-in 0.5s;
      -ms-transition: top 0.3s ease-in 0.5s;
      -o-transition: top 0.3s ease-in 0.5s;
      transition: top 0.3s ease-in 0.5s;
      top: 40%;
      -webkit-animation: bounce 1s ease-in 0.7s;
      -moz-animation: bounce 1s ease-in 0.7s;
      -ms-animation: bounce 1s ease-in 0.7s;
      -o-animation: bounce 1s ease-in 0.7s;
      animation: bounce bounce 1s ease-in 0.7s;
    }
a.group-link.group-link-init href="/statics/group.html"
javascript:
  $(function(){
    $(".group-link").addClass("group-link-show");
  });